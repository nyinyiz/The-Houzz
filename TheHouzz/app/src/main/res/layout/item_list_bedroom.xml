<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_medium_2"
    android:layout_marginRight="@dimen/margin_medium_2"
    android:foreground="@drawable/bg_ripple_black">
    <ImageView
        android:id="@+id/iv_bedroom"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:src="@drawable/facilities3"
        />
    <TextView
        android:id="@+id/tv_bedroom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_bedroom"
        android:text="Moden Quartrefoil Square mix"
        android:textColor="@color/primaryTextColor"
        android:gravity="center_vertical"
        android:lines="2"
        android:ellipsize="end"
        />
    <TextView
        android:id="@+id/tv_bedroom_by"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="by Houzz"
        android:textColor="@color/secondaryTextColor"
        android:layout_below="@id/tv_bedroom"
        android:gravity="center_vertical"/>
    <TextView
        android:id="@+id/tv_bedroom_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$67.99"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_below="@id/tv_bedroom_by"
        android:gravity="center_vertical"/>
</RelativeLayout>